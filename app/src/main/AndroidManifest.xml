<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.logics.sevenlogicssubscriptions" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.logics.sevenlogicssubscriptions.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:label="SignUp">
        </activity>
        <activity
            android:name=".ForgotPasswordActivity"
            android:label="ForgotPassword">
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="Home">
        </activity>
        <activity
            android:name=".AccountActivity"
            android:label="Home">
        </activity>
        <activity
            android:name=".RecipesActivity"
            android:label="Recipes">
        </activity>
        <activity
            android:name=".AddRecipeActivity"
            android:label="AddRecipe">
        </activity>
        <activity
            android:name=".RecipeDetailsActivity"
            android:label="RecipeDetails">
        </activity>
        <activity
                android:name=".CalendarActivity"
                android:label="CalendarActivity">
        </activity>
        <activity
                android:name=".AddCalendarEventActivity"
                android:label="AddCalendarEventActivity">
        </activity>
        <activity
                android:name=".ShowEventsActivity"
                android:label="ShowEventsActivity">
        </activity>
        <activity
                android:name=".ToDoListActivity"
                android:label="ToDoListActivity">
        </activity>
        <activity
                android:name=".EventDetailsActivity"
                android:label="EventDetailsActivity">
        </activity>
    </application>

</manifest>